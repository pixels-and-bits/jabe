<%= form_for [:admin, entry] do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>

  <%= form.label :body %>
  <%= form.text_area :body %>

  <% if entry.published_at %>
    <%= form.label :published_at %>
    <%= form.text_field :published_at %>
  <% end %>

  <br>

  <%= form.submit 'Save as draft', :class => 'btn' %>
  <%= form.submit 'Publish', :class => 'btn btn-success' %>
<% end %>
