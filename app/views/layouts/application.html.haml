<!doctype html>
/[if lt IE 7 ] <html lang="en" class="no-js ie6">
/[if IE 7 ] <html lang="en" class="no-js ie7">
/[if IE 8 ] <html lang="en" class="no-js ie8">
/[if IE 9 ] <html lang="en" class="no-js ie9">
/ [if (gt IE 9)|!(IE)]><!
%html.no-js{:lang => "en"}
  / <![endif]
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %title
      = "#{@page_title} - " if @page_title
      = SETTINGS.site_name
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %link{:href => "/favicon.ico", :rel => "shortcut icon"}/
    %link{:href => "/apple-touch-icon.png", :rel => "apple-touch-icon"}/
    = csrf_meta_tag
    = auto_discovery_link_tag :atom, feed_path
    = stylesheet_link_tag 'jabe/application', 'application'
    = yield :stylesheets
    / = javascript_include_tag 'jabe/libs/modernizr-1.6.min.js'
  %body
    #container
      %header
        = render 'layouts/header'
      - if admin_signed_in?
        %nav.nav.admin
          %ul
            %li= link_to 'Entries', admin_entries_path
            %li= link_to 'Settings', edit_admin_settings_path
            %li= link_to 'Logout', destroy_admin_session_path
      #main
        #content
          = render 'layouts/flashes'
          = yield
        #sidebar
          = render 'layouts/sidebar'
      %footer
        = render 'layouts/footer'
    = javascript_include_tag 'application.js'

    /[if lt IE 7 ]
      %script{ :type => 'text/javascript', :charset => 'utf-8' }
        DD_belatedPNG.fix('img, .png_bg')

    %script{ :type => 'text/javascript', :charset => 'utf-8' }
      $(document).ready(function() {
      = yield :on_ready
      })

    - unless SETTINGS.google_tracker_id.blank?
      :javascript
        var _gaq = [['_setAccount', '#{SETTINGS.google_tracker_id}'], ['_trackPageview']];
        (function(d, t) {
         var g = d.createElement(t),
             s = d.getElementsByTagName(t)[0];
         g.async = true;
         g.src = ('https:' == location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
         s.parentNode.insertBefore(g, s);
        })(document, 'script');
